    "/v1/api/system-portal/company/new": {
      "post": {
        "tags": [
          "Company"
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "required": [
                  "ArabicName",
                  "Email",
                  "EnglishName",
                  "Password"
                ],
                "type": "object",
                "properties": {
                  "ArabicName": {
                    "type": "string"
                  },
                  "EnglishName": {
                    "type": "string"
                  },
                  "Email": {
                    "type": "string",
                    "format": "email"
                  },
                  "PhoneNumber": {
                    "pattern": "^$|^\\+?\\d{1,3}?[-.\\s]?\\(?\\d{1,4}\\)?([-.\\s]?\\d{1,4}){1,3}$",
                    "type": "string"
                  },
                  "WebsiteUrl": {
                    "type": "string"
                  },
                  "LogoFile": {
                    "type": "string",
                    "format": "binary"
                  },
                  "Password": {
                    "pattern": "^(?=.*[A-Z])(?=.*\\d)(?=.*[^A-Za-z0-9]).+$",
                    "type": "string"
                  }
                }
              },
              "encoding": {
                "ArabicName": {
                  "style": "form"
                },
                "EnglishName": {
                  "style": "form"
                },
                "Email": {
                  "style": "form"
                },
                "PhoneNumber": {
                  "style": "form"
                },
                "WebsiteUrl": {
                  "style": "form"
                },
                "LogoFile": {
                  "style": "form"
                },
                "Password": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
